{
  "name": "rapid-react-pkg-demo",
  "description": "A CLI tool for quickly creating react package demos",
  "version": "0.6.0",
  "bin": {
    "rapid": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coston/rapid-react-pkg-demo.git"
  },
  "keywords": [
    "react",
    "cli",
    "package",
    "demo"
  ],
  "author": "Coston Perkins <https://coston.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/rapid-react-pkg-demo/issues"
  },
  "homepage": "https://github.com/coston/rapid-react-pkg-demo#readme",
  "scripts": {
    "dev": "node ./bin/cli.js dev",
    "build": "node ./bin/cli.js build",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "test": "echo \"Error: no test specified\""
  },
  "dependencies": {
    "@babel/preset-typescript": "7.26.0",
    "babel-loader": "^9.1.3",
    "commander": "^13.0.0",
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-pkg-demo": "0.11.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.1.3",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.7.6",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.1",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.23.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "typescript": "^5.3.3",
    "lint-staged": "^15.3.0",
    "husky": "^9.1.7",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "files": [
    "bin/",
    "app/",
    "next-env-d.ts",
    "next.config.mjs",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}

{
  "name": "rapid-react-pkg-demo",
  "description": "A CLI tool for quickly creating react package demos",
  "version": "0.1.1",
  "bin": {
    "rapid": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coston/rapid-react-pkg-demo.git"
  },
  "keywords": [
    "react",
    "cli",
    "package",
    "demo"
  ],
  "author": "Coston Perkins <coston.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/rapid-react-pkg-demo/issues"
  },
  "homepage": "https://github.com/coston/rapid-react-pkg-demo#readme",
  "scripts": {
    "dev": "node ./bin/cli.js dev",
    "build": "node ./bin/cli.js build",
    "start": "next start",
    "lint": "eslint . --max-warnings 0",
    "test": "echo \"Error: no test specified\""
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pkg-demo": "0.8.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.0.4",
    "@types/eslint": "^8.56.1",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "commander": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "typescript": "^5.3.3",
    "lint-staged": "^12.3.7",
    "husky": "^8.0.3",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "files": [
    "bin/",
    "app/",
    "next-env-d.ts",
    "next.config.js",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}
